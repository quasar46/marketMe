doctype html
html(lang="ru")
	head
		include modules/head.pug
	body
		.content
			include modules/header.pug

			main
				h1.visually-hidden Контакты

				// section contacts
				section.contacts

					// write
					.contacts-write.container
						h2.title Напишите нам
						.contacts-write__form
							// form
							form(action="get")
								.contacts-write__top
									.contacts-write__inputs
										label(for="name") 
											span Представьтесь, пожалуйста*
											input(type="text" id="name")
										label(for="email") 
											span Электронная почта*
											input(type="text" id="email")
										label(for="phone") Ваш телефон*
											input(type="text" id="phone")
									.contacts-write__textarea
										label(for="message") 
											span Текст сообщения
											textarea(id="message")
								.contacts-write__bottom
									.contacts-write__consent
										input(type="checkbox" id="consent") 
										label(for="consent") 
											span Я даю согласие на обработку персональных данных и соглашаюсь с <a href="politica.pdf">политикой конфиденциальности</a>
								.btn-wrapper
									.btn-gradient.btn-gradient--mode
										input(type="submit" value="Отправить письмо")
					// map
					.contacts-map
						.container
							.contacts-map__wrapper
